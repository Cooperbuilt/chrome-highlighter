{
    "manifest_version": 3,
    "name": "Content Highlighter",
    "version": "1.0",
    "permissions": ["activeTab", "storage", "scripting"],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "host_permissions": ["http://*/*", "https://*/*"],
    "action": {
      "default_popup": "popup.html"
    },
    "web_accessible_resources": [
      {
        "resources": ["sidebar.html"],
        "matches": ["<all_urls>"]
      }
    ]
  }
  